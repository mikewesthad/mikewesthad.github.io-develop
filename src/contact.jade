extend ./jade-layouts/_basic-page.jade

block content
    #contact.container

        #title Get in Touch

        #subtitle Looking to run a workshop on creative coding? Have a creative vision you want to bring to life? Or, maybe you just want to say hello? Drop me a line.

        form(action="https://formspree.io/mikewesthad@gmail.com" method="POST" class="contact-form")
            .contact-form__group
              label.contact-form__label(for="contact-name") Name
              input.contact-form__input(type="text" name="name" id="contact-name")
            .contact-form__group
              label.contact-form__label(for="contact-email") Email
              input.contact-form__input(type="email" name="_replyto" id="contact-email")
            .contact-form__group
              label.contact-form__label(for="contact-message") Message
              textarea.contact-form__input(name="message" rows="4" id="contact-message")
            input(class="contact-form__submit" type="submit" value="Send â†’")
